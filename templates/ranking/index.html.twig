{# templates/ranking/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Classement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-5">Classement des utilisateurs</h1>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Rang</th>
                <th scope="col">Nom d'utilisateur</th>
                <th scope="col">Points</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="{% if loop.index == 1 %}table-warning{% elseif loop.index == 2 %}table-secondary{% elseif loop.index == 3 %}table-info{% endif %}">
                    <td>{{ loop.index }}</td>
                    <td>{{ user.getName() }}</td>
                    <td>{{ user.getPointUsers() }} UniTs</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
