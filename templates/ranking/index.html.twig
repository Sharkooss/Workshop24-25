{% extends 'base.html.twig' %}

{% block title %}Classement{% endblock %}

{% block stylesheets %}
    <style>
        /* Conteneur principal */
        .container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
            max-width: 800px;
        }

        /* Titre principal */
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
            color: #007bff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        /* Podium Section */
        .podium {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            margin-bottom: 30px;
        }

        .podium-step {
            text-align: center;
            margin: 0 10px;
            padding: 10px;
            border-radius: 10px;
            color: #fff;
            font-weight: bold;
        }

        .first-place {
            background-color: #f3c623;
            width: 120px;
            height: 200px;
        }

        .second-place {
            background-color: #c0c0c0;
            width: 100px;
            height: 150px;
        }

        .third-place {
            background-color: #f2b46d;
            width: 100px;
            height: 120px;
        }

        .podium-step h2 {
            margin: 0;
        }

        /* Table styl√©e */
        table {
            border-collapse: collapse;
            margin: 0 auto;
        }

        thead th {
            background-color: #007bff;
            color: #fff;
            padding: 15px;
            font-size: 1.1rem;
        }

        tbody tr {
            transition: background-color 0.3s ease;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        tbody tr td {
            padding: 15px;
            font-size: 1rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            table {
                font-size: 0.9rem;
            }

            h1 {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Classement des utilisateurs</h1>

    <div class="podium">
        {% if users[0] is defined %}
            <div class="podium-step second-place">
                <h2>2e</h2>
                <p>{{ users[1].getName() }}</p>
                <p>{{ users[1].getPointUsers() }} UniTs</p>
            </div>
        {% endif %}
        
        {% if users[1] is defined %}
            <div class="podium-step first-place">
                <h2>1er</h2>
                <p>{{ users[0].getName() }}</p>
                <p>{{ users[0].getPointUsers() }} UniTs</p>
            </div>
        {% endif %}

        {% if users[2] is defined %}
            <div class="podium-step third-place">
                <h2>3e</h2>
                <p>{{ users[2].getName() }}</p>
                <p>{{ users[2].getPointUsers() }} UniTs</p>
            </div>
        {% endif %}
    </div>

    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">Rang</th>
                <th scope="col">Nom d'utilisateur</th>
                <th scope="col">Points</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users|slice(3, 7) %} {# Limiter du 4e au 10e utilisateur #}
                <tr>
                    <td>{{ loop.index + 3 }}</td>
                    <td>{{ user.getName() }}</td>
                    <td>{{ user.getPointUsers() }} UniTs</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
