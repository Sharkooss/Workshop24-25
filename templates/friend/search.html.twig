{# templates/friend/search.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Rechercher des amis{% endblock %}

{% block body %}
<div class="container">
    <h1>Rechercher des amis</h1>
    <form method="GET" action="{{ path('app_friend_search') }}">
        <input type="text" name="q" class="form-control mb-2" placeholder="Rechercher par nom ou prénom" value="{{ query }}">
        <button class="btn btn-primary">Rechercher</button>
    </form>

    {% if users is not empty %}
        <h3>Résultats</h3>
        <ul class="list-group">
            {% for user in users %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ user.name }} {{ user.surnameUsers }}
                    <form method="POST" action="{{ path('app_friend_request', { id: user.id }) }}">
                        <button class="btn btn-success">Envoyer une demande</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun utilisateur trouvé.</p>
    {% endif %}
</div>
{% endblock %}
