{# templates/profile/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Modifier mes informations</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.surnameUsers) }}
                    {{ form_widget(form.surnameUsers, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.emailUsers) }}
                    {{ form_widget(form.emailUsers, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.discord) }}
                    {{ form_widget(form.discord, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
