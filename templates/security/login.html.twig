{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <style>
        .login-container {
            height: 100vh;
            display: flex;
            align-items: center;
            flex-direction: column;
            gap:50px;
        }

        .card {
            width: 25rem;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border: none;
            text-align: center;
        }

        .card-title {
            font-size: 1.8rem;
            font-weight: bold;
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
        }

        .form-control {
            padding: 12px;
            font-size: 1rem;
            border-radius: 10px;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 30px;
        }

        .alert-danger {
            font-size: 1rem;
            color: #fff;
            background-color: #dc3545;
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .logo-container img {
            width: 200px;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="logo-container">
        <img src="{{ asset('images/Logos.png') }}" alt="Logo UniToken">
    </div>

    <div class="card">
        <h5 class="card-title">Connexion</h5>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group mb-3">
                <label for="inputEmail">Email</label>
                <input type="text" name="email_users" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus>
            </div>

            <div class="form-group mb-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <button class="btn btn-primary" type="submit">Se connecter</button>
        </form>
    </div>
</div>
{% endblock %}
